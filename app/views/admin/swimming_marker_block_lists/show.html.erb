<div class="container mx-auto px-4 py-8">
  <!-- Header da Bateria -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
          Bateria <%= @swimming_marker_block.position %>
        </h1>
        <div class="text-gray-600 space-y-1">
          <p><span class="font-semibold">Competição:</span> <%= @swimming_marker_block.competition_name %></p>
          <p><span class="font-semibold">Prova:</span> <%= @swimming_marker_block.proof_name %></p>
          <p><span class="font-semibold">Categoria:</span> <%= @swimming_marker_block.category_name %></p>
        </div>
      </div>
      <div class="text-right">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          <%= @swimming_marker_block.swimming_marker_lanes.count %> raias
        </span>
      </div>
    </div>
  </div>

  <!-- Grid de Raias -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @swimming_marker_block.swimming_marker_lanes.order(:lane).each do |lane| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden"
           data-controller="time-editor"
           data-time-editor-lane-id-value="<%= lane.id %>"
           data-time-editor-block-id-value="<%= @swimming_marker_block.id %>"
           data-time-editor-csrf-token-value="<%= form_authenticity_token %>">
        <!-- Header do Card -->
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-6 py-4">
          <div class="flex items-center justify-between">
            <h3 class="text-xl font-bold text-white">
              Raia <%= lane.lane %>
            </h3>
            <div class="bg-white bg-opacity-20 rounded-full px-3 py-1">
              <span class="text-white font-semibold text-sm">#<%= lane.lane %></span>
            </div>
          </div>
        </div>

        <!-- Conteúdo do Card -->
        <div class="p-6">
          <!-- Informações do Nadador -->
          <div class="mb-4">
            <h4 class="text-lg font-semibold text-gray-800 mb-2">
              <%= lane.swimmer.name %>
            </h4>
            <div class="text-sm text-gray-600 space-y-1">
              <% if lane.swimmer.team_name.present? %>
                <p><span class="font-medium">Equipe:</span> <%= lane.swimmer.team_name %></p>
              <% end %>
              <p><span class="font-medium">Idade:</span> <%= lane.swimmer.age %> anos</p>
              <p><span class="font-medium">Gênero:</span> <%= lane.swimmer.gender %></p>
            </div>
          </div>

          <!-- Tempo Registrado -->
          <div class="border-t pt-4">
            <div class="text-center">
              <p class="text-sm text-gray-500 mb-2">Tempo Registrado</p>

              <!-- Display do tempo -->
              <div data-time-editor-target="display" class="time-display">
                <% if lane.recorded_time.present? %>
                  <div class="bg-green-50 border border-green-200 rounded-lg p-3">
                    <p class="text-2xl font-bold text-green-700">
                      <%= lane.recorded_time_formatted %>
                    </p>
                    <p class="text-xs text-green-600 mt-1">
                      Registrado hoje
                    </p>
                  </div>
                <% else %>
                  <div class="bg-gray-50 border border-gray-200 rounded-lg p-3">
                    <p class="text-lg font-medium text-gray-500">
                      Sem tempo registrado
                    </p>
                    <p class="text-xs text-gray-400 mt-1">
                      Aguardando cronometragem
                    </p>
                  </div>
                <% end %>
              </div>

              <!-- Formulário de edição (inicialmente oculto) -->
              <div data-time-editor-target="edit" class="time-edit hidden">
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
                  <div class="mb-3">
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                      Tempo (MM:SS.mmm)
                    </label>
                    <input
                      type="text"
                      data-time-editor-target="input"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-center text-lg font-mono"
                      placeholder="00:00.000"
                      value="<%= lane.recorded_time_formatted %>"
                      pattern="[0-9]{2}:[0-9]{2}\.[0-9]{3}"
                      maxlength="9"
                    >
                    <p class="text-xs text-gray-500 mt-1">
                      Formato: MM:SS.mmm (ex: 01:23.456)
                    </p>
                  </div>

                  <div class="flex space-x-2">
                    <button
                      data-time-editor-target="saveButton"
                      data-action="click->time-editor#saveTime"
                      class="flex-1 bg-green-600 hover:bg-green-700 text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
                    >
                      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      Salvar
                    </button>
                    <button
                      data-time-editor-target="cancelButton"
                      data-action="click->time-editor#cancelEdit"
                      class="flex-1 bg-gray-500 hover:bg-gray-600 text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
                    >
                      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      Cancelar
                    </button>
                  </div>
                </div>
              </div>

              <!-- Botão de editar -->
              <div class="mt-3">
                <button
                  data-time-editor-target="editButton"
                  data-action="click->time-editor#editTime"
                  class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
                >
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  <%= lane.recorded_time.present? ? 'Editar Tempo' : 'Registrar Tempo' %>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer do Card -->
        <div class="bg-gray-50 px-6 py-3 border-t">
          <div class="flex items-center justify-between text-sm text-gray-500">
            <span>ID: <%= lane.id %></span>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
              <%= lane.swimming_marker_block_position %>ª bateria
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Mensagem quando não há raias -->
  <% if @swimming_marker_block.swimming_marker_lanes.empty? %>
    <div class="text-center py-12">
      <div class="bg-gray-50 rounded-lg p-8">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhuma raia cadastrada</h3>
        <p class="text-gray-500">Esta bateria ainda não possui raias configuradas.</p>
      </div>
    </div>
  <% end %>

  <!-- Botão de Voltar -->
  <div class="mt-8 text-center">
    <%= link_to admin_swimming_marker_block_lists_path,
        class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors duration-200" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Voltar para Lista de Baterias
    <% end %>
  </div>
</div>
