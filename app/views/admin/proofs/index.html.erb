<% content_for :title, "Provas" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Provas</h1>
    <%= link_to "Nova prova", new_admin_proof_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
            Competição
          </th>
          <th scope="col" class="px-6 py-3">
            Prova
          </th>
          <th scope="col" class="px-6 py-3">
            Gênero
          </th>
          <th scope="col" class="px-6 py-3">
            Categorias
          </th>
          <th scope="col" class="px-6 py-3">
            Ações
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @proofs.any? %>
          <% @proofs.each do |proof| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= proof.competition_name %>
              </th>
              <td class="px-6 py-4">
                <%= proof.name %>
              </td>
              <td class="px-6 py-4">
                <%= Proof.genders[proof.gender] %>
              </td>
              <td class="px-6 py-4">
                <%= proof.categories.map(&:name).join(", ") %>
              </td>
              <td class="px-6 py-4">
                <div class="flex space-x-2">
                  <%= link_to "Show", admin_proof_path(proof), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                  <%= link_to "Edit", edit_admin_proof_path(proof), class: "font-medium text-green-600 dark:text-green-500 hover:underline" %>
                  <%= button_to "Delete", admin_proof_path(proof), method: :delete, class: "font-medium text-red-600 dark:text-red-500 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td colspan="6" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
              No proofs found.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
