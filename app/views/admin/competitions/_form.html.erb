<%= form_with(model: [:admin, competition], class: "contents") do |form| %>
  <% if competition.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(competition.errors.count, "error") %> prohibited this competition from being saved:</h2>

      <ul class="list-disc ml-6">
        <% competition.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": competition.errors[:name].none?, "border-red-400 focus:outline-red-600": competition.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :event_initial_date %>
    <%= form.date_field :event_initial_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": competition.errors[:event_initial_date].none?, "border-red-400 focus:outline-red-600": competition.errors[:event_initial_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :event_final_date %>
    <%= form.date_field :event_final_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": competition.errors[:event_final_date].none?, "border-red-400 focus:outline-red-600": competition.errors[:event_final_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": competition.errors[:address].none?, "border-red-400 focus:outline-red-600": competition.errors[:address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": competition.errors[:description].none?, "border-red-400 focus:outline-red-600": competition.errors[:description].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
