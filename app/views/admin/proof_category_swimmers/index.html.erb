<% content_for :title, "Prova, categoria e nadador" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Vínculação de prova, categoria e nadador</h1>
    <%= link_to "Nova vínculação", new_admin_proof_category_swimmer_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <!-- Filtros -->
  <%= form_with url: admin_proof_category_swimmers_path, method: :get, local: true, class: "bg-white p-6 rounded-lg shadow-md mb-6" do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
      <div>
        <%= form.label :competition_id, "Competição", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.collection_select :competition_id, Competition.all, :id, :name,
            { include_blank: 'Todas as competições', selected: params[:competition_id] },
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :proof_id, "Prova", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.collection_select :proof_id, Proof.all, :id, :display_name,
            { include_blank: 'Todas as provas', selected: params[:proof_id] },
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :swimmer_name, "Nome do Nadador", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :swimmer_name, value: params[:swimmer_name],
            placeholder: "Digite o nome do nadador",
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="flex space-x-2">
        <%= form.submit "Buscar", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "Limpar", admin_proof_category_swimmers_path, class: "px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    </div>
  <% end %>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
            Competição
          </th>
          <th scope="col" class="px-6 py-3">
            Prova
          </th>
          <th scope="col" class="px-6 py-3">
            Categoria
          </th>
          <th scope="col" class="px-6 py-3">
            Nadador
          </th>
          <th scope="col" class="px-6 py-3">
            Ações
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @proof_category_swimmers.any? %>
          <% @proof_category_swimmers.each do |proof_category_swimmer| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= proof_category_swimmer.competition_name %>
              </th>
              <td class="px-6 py-4">
                <%= proof_category_swimmer.proof_name %>
              </td>
              <td class="px-6 py-4">
                <%= proof_category_swimmer.category_name %>
              </td>
              <td class="px-6 py-4">
                <%= proof_category_swimmer.swimmer_name %>
              </td>
              <td class="px-6 py-4">
                <div class="flex space-x-2">
                  <%= link_to "Show", admin_proof_category_swimmer_path(proof_category_swimmer), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                  <%= link_to "Edit", edit_admin_proof_category_swimmer_path(proof_category_swimmer), class: "font-medium text-green-600 dark:text-green-500 hover:underline" %>
                  <%= button_to "Delete", admin_proof_category_swimmer_path(proof_category_swimmer), method: :delete, class: "font-medium text-red-600 dark:text-red-500 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td colspan="6" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
              No proof category swimmers found.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Paginação -->
  <div class="mt-6">
    <% if @pagy %>
      <%== pagy_tailwind_nav(@pagy) %>
      <div class="flex justify-center mt-2 text-sm text-gray-500">
        Mostrando <%= @pagy.from %> a <%= @pagy.to %> de <%= @pagy.count %> resultados
      </div>
    <% end %>
  </div>
</div>
