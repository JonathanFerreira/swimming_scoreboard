<%= form_with(model: [:admin, swimmer], class: "contents") do |form| %>
  <% if swimmer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(swimmer.errors.count, "error") %> prohibited this swimmer from being saved:</h2>

      <ul class="list-disc ml-6">
        <% swimmer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swimmer.errors[:name].none?, "border-red-400 focus:outline-red-600": swimmer.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swimmer.errors[:phone_number].none?, "border-red-400 focus:outline-red-600": swimmer.errors[:phone_number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :birthdate %>
    <%= form.date_field :birthdate, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swimmer.errors[:birthdate].none?, "border-red-400 focus:outline-red-600": swimmer.errors[:birthdate].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :gender %>
    <%= form.select :gender, Swimmer::GENDERS.map { |key, value| [value, key] }, { include_blank: true }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swimmer.errors[:gender].none?, "border-red-400 focus:outline-red-600": swimmer.errors[:gender].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :team_id %>
    <%= form.collection_select :team_id, Team.all, :id, :name, { include_blank: true }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swimmer.errors[:team_id].none?, "border-red-400 focus:outline-red-600": swimmer.errors[:team_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
