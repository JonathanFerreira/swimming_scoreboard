<div class="swimming-marker-lane-field border border-gray-200 rounded-lg p-4 mb-4 bg-gray-50">
    <div class="flex justify-between items-start mb-3">
      <%= link_to_remove_association "Remover", f, class: "text-red-600 hover:text-red-800 text-sm" %>
    </div>

    <div class="grid grid-cols-1 gap-4">
      <div>
        <%= f.label :swimmer_id, "Nadador", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.collection_select :swimmer_id, @swimming_marker_group.swimmers_list, :id, :name,
                                { prompt: "Selecione um nadador" },
                                { class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600" } %>
      </div>
      <div>
        <%= f.label :lane, "Raia", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :lane, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600" %>
      </div>
    </div>
  </div>
