<% content_for :title, "Grupo de balizamento" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Grupo de balizamento</h1>
    <div class="flex gap-3">
      <%= link_to "Novo grupo", new_admin_swimming_marker_group_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      <%= link_to "Geração automática", automatic_admin_swimming_marker_groups_path, class: "rounded-md px-3.5 py-2.5 bg-green-600 hover:bg-green-500 text-white font-medium" %>
    </div>
  </div>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
            Competição
          </th>
          <th scope="col" class="px-6 py-3">
            Prova
          </th>
          <th scope="col" class="px-6 py-3">
            Categoria
          </th>
          <th scope="col" class="px-6 py-3">
            Ações
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @swimming_marker_groups.any? %>
          <% @swimming_marker_groups.each do |swimming_marker_group| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= swimming_marker_group.competition_name %>
              </th>
              <td class="px-6 py-4">
                <%= swimming_marker_group.proof_display_name %>
              </td>
              <td class="px-6 py-4">
                <%= swimming_marker_group.category_name %>
              </td>
              <td class="px-6 py-4">
                <div class="flex space-x-2">
                  <%= link_to "Show", admin_swimming_marker_group_path(swimming_marker_group), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                  <%= link_to "Edit", edit_admin_swimming_marker_group_path(swimming_marker_group), class: "font-medium text-green-600 dark:text-green-500 hover:underline" %>
                  <%= button_to "Delete", admin_swimming_marker_group_path(swimming_marker_group), method: :delete, class: "font-medium text-red-600 dark:text-red-500 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td colspan="6" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
              No swimming marker groups found.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Paginação -->
  <div class="mt-6">
    <% if @pagy %>
      <%== pagy_tailwind_nav(@pagy) %>
      <div class="flex justify-center mt-2 text-sm text-gray-500">
        Mostrando <%= @pagy.from %> a <%= @pagy.to %> de <%= @pagy.count %> resultados
      </div>
    <% end %>
  </div>
</div>
