<div id="<%= dom_id swimming_marker_group %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">CompetiÃ§Ã£o:</strong>
    <%= swimming_marker_group.competition_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Prova:</strong>
    <%= swimming_marker_group.proof_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Categoria:</strong>
    <%= swimming_marker_group.category_name %>
  </div>

  <!-- Cards das Baterias -->
  <div class="mt-8">
    <h3 class="text-xl font-semibold mb-4">Baterias</h3>
    <% if swimming_marker_group.swimming_marker_blocks.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% swimming_marker_group.swimming_marker_blocks.order(:position).each do |block| %>
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-4">
            <div class="flex items-center justify-between mb-3">
              <h4 class="text-lg font-medium text-gray-900">
                Bateria <%= block.position %>
              </h4>
              <div class="flex space-x-2">
                <%= link_to edit_admin_swimming_marker_group_swimming_marker_block_path(swimming_marker_group, block),
                    class: "p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                <% end %>
                <%= button_to admin_swimming_marker_group_swimming_marker_block_path(swimming_marker_group, block),
                    method: :delete,
                    class: "p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors",
                    data: { turbo_confirm: "Tem certeza que deseja excluir esta bateria?" } do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                <% end %>
              </div>
            </div>

            <% if block.swimmers.any? %>
              <div class="space-y-2">
                <h5 class="text-sm font-medium text-gray-700 mb-2">Nadadores:</h5>
                <% block.swimming_marker_lanes.includes(:swimmer).order(:lane).each do |lane| %>
                  <div class="flex items-center justify-between bg-gray-50 rounded px-3 py-2">
                    <div class="flex-1">
                      <span class="text-sm font-medium text-gray-900">
                        <%= lane.swimmer.name %>
                      </span>
                      <% if lane.swimmer.team_name.present? %>
                        <span class="text-xs text-gray-500 ml-2">
                          (<%= lane.swimmer.team_name %>)
                        </span>
                      <% end %>
                    </div>
                    <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">
                      Raia <%= lane.lane %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-500 italic">Nenhum nadador cadastrado nesta bateria</p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 italic">Nenhuma bateria cadastrada</p>
    <% end %>
  </div>
</div>
