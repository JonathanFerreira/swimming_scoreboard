<%= form_with(model: [:admin, swimming_marker_group], class: "contents") do |form| %>
  <% if swimming_marker_group.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(swimming_marker_group.errors.count, "error") %> prohibited this swimming_marker_group from being saved:</h2>

      <ul class="list-disc ml-6">
        <% swimming_marker_group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="category-by-proof-loader swimmer-loader"
       data-category-by-proof-loader-url-value="/admin/swimming_marker_groups/categories_by_proof">
    <div class="my-5">
      <%= form.label :proof_id %>
      <%= form.collection_select :proof_id, Proof.all, :id, :display_name, { include_blank: 'Selecione uma prova' },
      data: { category_by_proof_loader_target: "proofSelect", action: "change->category-by-proof-loader#loadCategories" },
      class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swimming_marker_group.errors[:proof_id].none?, "border-red-400 focus:outline-red-600": swimming_marker_group.errors[:proof_id].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: 'Selecione uma categoria' }, {
        data: {
          category_by_proof_loader_target: "categorySelect"
        },
        class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swimming_marker_group.errors[:category_id].none?, "border-red-400 focus:outline-red-600": swimming_marker_group.errors[:category_id].any?}]
      } %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
