<div class="container mx-auto px-4 py-8" data-controller="time-modal">
  <!-- Header -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
          Minhas Raias
        </h1>
        <div class="text-gray-600 space-y-1">
          <p><span class="font-semibold">Sua raia é a número:</span> <%= current_user.lane %></p>
        </div>
      </div>
    </div>
  </div>

  <%= render 'filter' %>

  <!-- Tabelas agrupadas por Prova e Categoria -->
  <% if @grouped_lanes.any? %>
    <% @grouped_lanes.each do |group_key, lanes| %>
      <div class="bg-white rounded-lg shadow-md mb-8 overflow-hidden">
        <!-- Título da Tabela -->
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-6 py-4">
          <h2 class="text-2xl font-bold text-white">
            <%= group_key[:proof_name] %> - <%= group_key[:category_name] %>
          </h2>
          <p class="text-blue-100 text-sm mt-1">
            <%= group_key[:competition_name] %>
          </p>
        </div>

        <!-- Tabela -->
        <div class="relative overflow-x-auto">
          <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3">Bateria</th>
                <th scope="col" class="px-6 py-3">Nadador</th>
                <th scope="col" class="px-6 py-3">Tempo Registrado</th>
                <th scope="col" class="px-6 py-3">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% lanes.each do |lane| %>
                <tr class="bg-white border-b hover:bg-gray-50"
                    data-controller="referee-time-display"
                    data-referee-time-display-lane-id-value="<%= lane.id %>"
                    data-referee-time-display-swimmer-name-value="<%= lane.swimmer.name %>"
                    data-referee-time-display-battery-value="<%= lane.swimming_marker_block_position %>"
                    data-referee-time-display-current-time-value="<%= lane.recorded_time_formatted || '' %>"
                    data-time-modal-lane-id-value="<%= lane.id %>"
                    data-time-modal-csrf-token-value="<%= form_authenticity_token %>"
                    data-time-modal-referee-mode-value="true"
                    data-time-modal-swimmer-name-value="<%= lane.swimmer.name %>"
                    data-time-modal-battery-value="<%= lane.swimming_marker_block_position %>"
                    data-time-modal-current-time-value="<%= lane.recorded_time_formatted || '' %>">
                  <td class="px-6 py-4">
                    <%= lane.swimming_marker_block_position %>ª
                  </td>
                  <td class="px-6 py-4">
                  <div>
                    <div class="font-medium text-gray-900"><%= lane.swimmer.name %></div>
                    <div class="text-xs text-gray-500">
                      <%= lane.swimmer.age %> anos
                    </div>
                  </div>
                  </td>
                  <td class="px-6 py-4">
                    <!-- Display do tempo -->
                    <div data-referee-time-display-target="display" class="time-display">
                      <% if lane.recorded_time.present? %>
                        <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                          <%= lane.recorded_time_formatted %>
                        </div>
                      <% else %>
                        <span class="text-gray-400 text-sm">-</span>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <!-- Botão para abrir modal -->
                    <button
                      data-action="click->time-modal#open"
                      class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
                    >
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                      <%= lane.recorded_time.present? ? 'Editar' : 'Registrar' %>
                    </button>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- Mensagem quando não há raias -->
    <div class="text-center py-12">
      <div class="bg-gray-50 rounded-lg p-8">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhuma raia encontrada</h3>
        <p class="text-gray-500">Você não está vinculado a nenhuma raia no momento.</p>
      </div>
    </div>
  <% end %>

  <!-- Modal para registro de tempo (compartilhado) -->
  <div id="time-modal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true"
       data-time-modal-target="modal">
    <!-- Overlay transparente para fechar ao clicar fora -->
    <div class="fixed inset-0 transition-opacity" data-action="click->time-modal#close"></div>

    <!-- Modal -->
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg w-full">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-4 sm:px-6 py-4">
          <h3 class="text-lg sm:text-xl font-bold text-white" id="modal-title">
            Registrar Tempo
          </h3>
        </div>

        <!-- Conteúdo -->
        <div class="bg-white px-4 sm:px-6 py-4">
          <!-- Informações da Raia -->
          <div class="mb-6 space-y-2">
            <div class="flex justify-between items-center py-2 border-b">
              <span class="text-sm font-medium text-gray-500">Nadador:</span>
              <span class="text-sm font-semibold text-gray-900" data-time-modal-target="swimmerName"></span>
            </div>
            <div class="flex justify-between items-center py-2 border-b">
              <span class="text-sm font-medium text-gray-500">Bateria:</span>
              <span class="text-sm font-semibold text-gray-900" data-time-modal-target="battery"></span>
            </div>
          </div>

          <!-- Campo de tempo -->
          <div class="mb-6">
            <label for="time-input" class="block text-sm font-medium text-gray-700 mb-2">
              Tempo (MM:SS.mmm)
            </label>
            <input
              type="text"
              id="time-input"
              data-time-modal-target="input"
              class="w-full px-4 py-3 text-xl sm:text-2xl font-mono text-center border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="00:00.000"
              pattern="[0-9]{2}:[0-9]{2}\.[0-9]{3}"
              maxlength="9"
            >
            <p class="mt-2 text-xs text-gray-500 text-center">
              Formato: MM:SS.mmm (ex: 01:23.456)
            </p>
          </div>
        </div>

        <!-- Footer com botões -->
        <div class="bg-gray-50 px-4 sm:px-6 py-4 flex flex-col sm:flex-row sm:justify-end gap-3">
          <button
            type="button"
            data-action="click->time-modal#close"
            class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            Cancelar
          </button>
          <button
            type="button"
            data-action="click->time-modal#save"
            data-time-modal-target="saveButton"
            class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Salvar Tempo
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
